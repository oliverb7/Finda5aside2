<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oliverbaird.finda5aside.MyGamesDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewManageYourGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="Manage your game"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCancelGame"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:background="#8BC34A"
            android:textColor="#ffffff"
            android:text="Cancel game" />

        <TextView
            android:id="@+id/textViewMyGamesDetailsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewManageYourGame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:text="23/04/18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMyGamesDetailsLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMyGamesDetailsDate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:text="PEC QUEENS"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMyGamesDetailsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewMyGamesDetailsLocation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="7PM"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSpacesLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewMyGamesDetailsDate"
            android:layout_below="@+id/textViewMyGamesDetailsTime"
            android:layout_marginTop="12dp"
            android:text="Spaces left:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMyGamesDetailsSpaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="214dp"
            android:layout_marginLeft="240dp"

            android:text="6"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/side_menu"
        android:layout_gravity="start"
        ></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
