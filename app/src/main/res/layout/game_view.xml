<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="80dp"
        android:maxHeight="80dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/oliver" />

    <TextView
        android:id="@+id/item_txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/item_icon"
        android:fontFamily="sans-serif"
        android:text="Oliver Baird"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textviewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_icon"
        android:layout_alignStart="@+id/item_txtUsername"
        android:text="5aside football at Civil." />

    <TextView
        android:id="@+id/textviewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textviewLocation"
        android:layout_alignBottom="@+id/textviewLocation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:text="10am" />

    <TextView
        android:id="@+id/textviewCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/item_txtUsername"
        android:layout_below="@+id/item_txtUsername"
        android:text="Â£1" />

</RelativeLayout>
