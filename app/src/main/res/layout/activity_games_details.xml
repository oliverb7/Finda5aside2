        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageLocation"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/location_icon" />

            <ImageButton
                android:id="@+id/imageMessage"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/message_icon" />

            <ImageButton
                android:id="@+id/imageCall"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/phone_icon" />

            <ImageButton
                android:id="@+id/imageWebsite"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/website_icon" />

            <TextView
            android:id="@+id/textViewDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"
            android:text="James Kennedy"
            android:textSize="20dp"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/textViewDetailsLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="PEC Queens"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="230dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

            <TextView
            android:id="@+id/textViewDetailsCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="£5"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="20dp" />

            <TextView
            android:id="@+id/textViewDetailsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="230dp"
            android:text="21/02/2018"
            android:textStyle="bold"
            android:textSize="20dp"/>

            <TextView
            android:id="@+id/textViewDetailsNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="10dp"
            android:text="0792836273"
            android:textStyle="bold"
            android:textSize="20dp" />

            <TextView
            android:id="@+id/textViewDetailsSpaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="230dp"
            android:text="3 Spaces"
            android:textSize="20dp"
            android:textStyle="bold"
                />

            <TextView
            android:id="@+id/textViewDetailsSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Beginner"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/textViewDetailsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="230dp"
            android:text="6pm"
            android:textSize="20dp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNameBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:text="Name"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/editTextNameBook"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp"
                android:text="Email"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/textViewNumberBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:text="Phone Number"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/editTextNumberBook"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="480dp"
                android:layout_marginLeft="10dp"
                />

            <Button
            android:id="@+id/buttonBook"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shapes_rounded"
            android:text="Book"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="6dp"
            android:textColor="#ffffff" />

        </RelativeLayout>

