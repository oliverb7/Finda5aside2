<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.oliverbaird.finda5aside.GamesDetails">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageLocation"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/location_icon" />

            <ImageButton
                android:id="@+id/imageMessage"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/message_icon" />

            <ImageButton
                android:id="@+id/imageCall"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/phone_icon" />

            <ImageButton
                android:id="@+id/imageQuestion"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/question_mark" />

            <TextView
                android:id="@+id/textViewDetailsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp"
                android:text="James Kennedy"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDetailsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="PEC Queens"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="230dp"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textViewDetailsCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="160dp"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDetailsCostIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="160dp"
                android:text="Â£"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDetailsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="230dp"
                android:text="21/02/2018"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textViewDetailsNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="10dp"
                android:text="0792836273"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewDetailsSpaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="230dp"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"
                    />

            <TextView
                android:id="@+id/textViewSpacesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewDetailsSpaces"
                android:layout_alignBottom="@+id/textViewDetailsSpaces"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textViewDetailsSpaces"
                android:text="Spaces left"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewDetailsSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Beginner"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDetailsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="230dp"
                android:text="6pm"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNameBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewNumberBook"
                android:layout_alignStart="@+id/editTextNameBook"
                android:layout_marginBottom="65dp"
                android:text="Name" />

            <EditText
                android:id="@+id/editTextNameBook"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewNumberBook"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="9dp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewNumberBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editTextNumberBook"
                android:layout_alignStart="@+id/editTextNumberBook"
                android:layout_marginBottom="59dp"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/editTextNumberBook"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/buttonBook"
                android:layout_alignStart="@+id/textViewNameBook"
                android:layout_marginBottom="59dp"
                android:inputType="phone" />

            <Button
                android:id="@+id/buttonBook"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapes_rounded"
                android:text="Book"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="6dp"
                android:textColor="#ffffff"
                android:onClick="pay"/>

            <TextView
                android:id="@+id/textViewReviewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="300dp"
                android:text="2"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewReviewName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/textViewNameBook"
                android:layout_below="@+id/imageButtonArrowUp"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <ImageButton
                android:id="@+id/imageButtonArrowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="351dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/uparrow" />

            <ImageButton
                android:id="@+id/imageButtonArrowDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="351dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/downarrow" />

        </RelativeLayout>


    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        app:menu="@menu/side_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
